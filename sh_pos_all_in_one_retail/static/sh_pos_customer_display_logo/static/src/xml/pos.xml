<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="CustomerFacingDisplayOrder" t-inherit="point_of_sale.CustomerFacingDisplayOrder" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-odoo_logo_container')]" position="replace">
        	<t t-if="pos and pos.config.sh_change_or_remove_logo">
	        	<t t-if="pos and pos.config.sh_customer_display_logo and pos.config.sh_is_logo_replace_remove == 'replace_logo'">
	        		<div class="sh-pos-odoo_logo_container">
	        			<img t-att-src="pos.get_screen_logo_url()" alt="Logo" class="pos-logo" />
	        		</div>
	            </t>
	            <t t-else="">
	            	<t t-if="pos.config.sh_is_logo_replace_remove == 'remove_logo'">
	            	</t>
	            	<t t-else="">
	            		<div class="pos-odoo_logo_container"/>
	            	</t>
	            </t>
        	</t>
        	<t t-else="">
        		<div class="pos-odoo_logo_container"/>
        	</t>
        </xpath>
   </t>
   
   <t t-extend="CustomerFacingDisplayHead" t-inherit="point_of_sale.CustomerFacingDisplayHead" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('resources')]" position="inside">
        	<link rel="stylesheet" type="text/css" href="/sh_pos_all_in_one_retail/static/sh_pos_customer_display_logo/static/src/css/pos.css"/>
        </xpath>
  </t>
</templates>
