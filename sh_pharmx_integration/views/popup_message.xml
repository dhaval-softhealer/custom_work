<odoo>
    <record id="sh_export_successful_view" model="ir.ui.view">
        <field name="name">sh.exoprt.successful.view</field>
        <field name="model">sh.popup.message</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <div>
                <b>Connection Successful</b>
            </div>
            <footer>
                <button string="Ok" class="btn-default" special="cancel" />
            </footer>
        </field>
    </record>
    <record id="sh_export_failure_view" model="ir.ui.view">
        <field name="name">sh.exoprt.failure.view</field>
        <field name="model">sh.popup.message</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <div>
                <b>Failed To Connect,Check Your Credentials</b>
            </div>
            <footer>
                <button string="Ok" class="btn-default" special="cancel" />
            </footer>
        </field>
    </record>
</odoo>