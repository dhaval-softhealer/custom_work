<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_linkly_tcp_connector.PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='line.selected']//div[hasclass('delete-button')]/.." position="attributes">
            <attribute name="t-if">!line.payment_status or ![&apos;done&apos;, &apos;reversed&apos;, &apos;waiting&apos;].includes(line.payment_status)</attribute>
        </xpath>
        <xpath expr="//t[@t-else='']//div[hasclass('delete-button')]/.." position="attributes">
            <attribute name="t-if">!line.payment_status or ![&apos;done&apos;, &apos;reversed&apos;, &apos;waiting&apos;].includes(line.payment_status)</attribute>
        </xpath>
    </t>

</templates>
