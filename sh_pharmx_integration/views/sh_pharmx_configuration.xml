<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="pahrmx_config_setting_view" model="ir.ui.view">
			<field name="name">pharmx.config.setting.view</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="base.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('settings')]" position="inside">
					<div class="app_settings_block" data-string="PharmX Settings" string="PharmX" data-key='sh_pharmx_integration'>
						<div>
							<h2>Configuation</h2>
							<field name="company_id" invisible="1" />
							<div class="row o_settings_container">
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane">
										<label for="pharmx_username" />
										<br />
										<field name="pharmx_username" class="oe_inline" />
									</div>
									<div class="o_setting_left_pane"></div>
								</div>
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane"/>
									<label for="test_enviroment" />
									<div class="o_setting_left_pane"><field name="test_enviroment" class="oe_inline"/></div>
								</div>
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane">
										<label for="pharmx_password" />
										<br />
										<field name="pharmx_password" class="oe_inline" password="1"/>
									</div>
									<div class="o_setting_left_pane">
									</div>
								</div>
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane"/>										
									<button name="list_gates" icon="fa-arrow-right" type="object" string="List Gateways" class="btn-link"/>										
									<div class="o_setting_left_pane">
									</div>
								</div>
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane">
										<button type="object" class="btn btn-primary" string="Connect" name="check_configuration"/>
									</div>
									<div class="o_setting_left_pane">
									</div>
								</div>	
								<div class="col-6 o_setting_box">
									<div class="o_setting_right_pane">
										<label for="failure_responsible_user" />
										<br />
										<field name="failure_responsible_user" class="oe_inline"/>
									</div>
									<div class="o_setting_left_pane">
									</div>
								</div>					
							</div>
						</div>						
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>