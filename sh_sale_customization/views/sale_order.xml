<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='sh_sale_order_form_view' model='ir.ui.view'>
        <field name='name'>sh.sale.order.form.inherit</field>
        <field name='model'>sale.order</field>
        <field name='inherit_id' ref='sale.view_order_form' />
        <field name='arch' type='xml'>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_view_po"
                        type="object" icon="fa-credit-card" help="Purchase Orders" attrs="{'invisible': [('sh_purchase_order_count', '=', 0)]}">
                        <field name="sh_purchase_order_count" widget="statinfo" string="Purchases"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_mrp_bom"
                icon="fa-flask" attrs="{'invisible': [('sh_BOM_count', '=', 0)]}">
                    <field name="sh_BOM_count" widget="statinfo" string="Bills of Materials"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_attachments"
                icon="fa-paperclip" attrs="{'invisible': [('sh_attechment_count', '=', 0)]}">
                    <field name="sh_attechment_count" widget="statinfo" string="Attachments"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="create_po" type="object" string="Create Purchase" />
                <field name="sh_purchase_order_count" invisible="1"/>
                <field name="sh_BOM_count" invisible="1"/>
                <field name="sh_attechment_count" invisible="1"/>
            </xpath>
        </field>
    </record>
   
</odoo>
