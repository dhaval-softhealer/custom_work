<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <record id="corum_product_supplierinfo_form_view" model="ir.ui.view">
            <field name="name">corum.product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">

                <!-- Add price_excl field -->
                <xpath expr="//field[@name='price']" position="after">
                    <field name="price_excl"/>
                </xpath>

                <!-- Hide price field -->
                <xpath expr="//field[@name='price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Hide price field -->
                <xpath expr="//label[@for='price']" position="attributes">
                    <attribute name="string">Price</attribute>
                </xpath>

            </field>
        </record>

        <record id="corum_product_supplierinfo_tree_view" model="ir.ui.view">
            <field name="name">corum.product.supplierinfo.tree.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">

                <!-- Add price_excl field -->
                <xpath expr="//field[@name='price']" position="before">
                    <field name="price_excl"/>
                </xpath>

                <!-- Rename price field -->
                <xpath expr="//field[@name='price']" position="attributes">
                    <attribute name="string">Price (Incl. Tax)</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

    </odoo>