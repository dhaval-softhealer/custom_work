<odoo>
    <record model="ir.rule" id="pharmx_multi_rule">
        <field name="name">PharmX Multi Company</field>
        <field name="model_id" ref="model_pharmx_gateways"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="pharmx_multi_account_rule">
        <field name="name">PharmX Accounts - Multi Company</field>
        <field name="model_id" ref="model_pharmx_accounts"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>