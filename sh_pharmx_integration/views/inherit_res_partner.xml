<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pharmx_state_supplier" model="ir.ui.view">
        <field name="name">pharmx.state.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Pharmx" name="state_supplier">
                    <h3 class="text-primary mb-2">Extra Fields</h3>
                    <group>                        
                        <group>
                            <field name="pharmx_supplier_id" string="PharmX Supplier ID"/>
                            <field name="stock_availability_requests" readonly="1"/>
                        </group>
                    </group>
                </page>
                <page string="Accounts" name="account_ids">      
                    <field name="account_ids" string="Accounts">
                        <tree>
                            <field name="name"/>
                            <field name="company_id"/>                      
                        </tree>
                        <form string="Accounts">
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>          
                            </group>            
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
