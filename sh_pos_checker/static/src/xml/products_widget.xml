<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ProductsWidget" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension">
        <xpath expr="//div[@class='product-list-container']" position="after">
            <div class="sh_camera_screen">
                <div class="camera-list sh_mobile_camera_list">
                    <section class="oe_edit_only sh_video_section" attrs="{'invisible': [('state', 'in', ['cancel','done'] )]}">
                        <div id="js_id_sh_sale_barcode_mobile_vid_div" style="display: none;">
                            <group style="margin-bottom: 10px;">
                                <div class="form-group row sh_selection_camera_div">
                                    <strong class="col-3 sh_camera_label">Camera</strong>
                                    <select class="col-8 form-control" id="js_id_sh_sale_barcode_mobile_cam_select"> </select>
                                </div>
                            </group>

                            <video id="video" class="cls_sh_all_in_one_mbs_video_tag" width="600" height="500"></video>
                        </div>
                    </section>
                </div>
            </div>
        </xpath>
    </t>
</templates>