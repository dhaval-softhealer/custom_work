<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='sh_mrp_order_form_view' model='ir.ui.view'>
        <field name='name'>sh.mrp.order.form.inherit</field>
        <field name='model'>mrp.production</field>
        <field name='inherit_id' ref='mrp.mrp_production_form_view' />
        <field name='arch' type='xml'>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <field name="sh_purchase_order_count" invisible="1"/>
                <field name="sh_attechment_count" invisible="1"/>
                <button class="oe_stat_button" name="action_view_po"
                        type="object" icon="fa-credit-card" help="Purchase Orders" attrs="{'invisible': [('sh_purchase_order_count', '=', 0)]}">
                        <field name="sh_purchase_order_count" widget="statinfo" string="Purchase" />
                </button>
                <button class="oe_stat_button" type="object" name="action_view_attachments"
                icon="fa-paperclip" attrs="{'invisible': [('sh_attechment_count', '=', 0)]}">
                <field name="sh_attechment_count" widget="statinfo" string="Attachments" />
                </button>
            </xpath>
        </field>
    </record>
    <record id="sh_view_attachment_tree" model="ir.ui.view">
        <field name="name">Custom Tree View</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree string="Attachments">
                <field name="name"/>
                <field name="datas" filename="name"  widget="binary"/>
            </tree>
        </field>
    </record>
</odoo>
